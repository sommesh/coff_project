<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:fadingEdge="none"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/bac"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.som.coffee.justjava">

    <TextView
        android:id="@+id/text8"
        android:textColor="#F00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kafe"
        android:textSize="40dp"
        android:textAllCaps="true"
        android:layout_gravity="center"/>

    <TextView
        android:textColor="@color/red"
        android:paddingTop="15dp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Cappuccino"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/cap"
        android:onClick="cap"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/capuccino" />

    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espresso"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/esp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="esp"
        android:padding="0dp"
        android:src="@drawable/espresso" />


    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Americano"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ame"
        android:onClick="a"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/america"/>

    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caffe Latte"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:onClick="caf"
        android:id="@+id/caf"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/caffe" />

    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cafe au Lait"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cafe"
        android:onClick="cafe"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cafe" />

    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caf Mocha"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:src="@drawable/mocha"
        android:onClick="moc"/>

    <TextView
        android:paddingTop="22dp"
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caramel Macchiato"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/car"
        android:padding="0dp"
        android:onClick="car"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/caramel" />

</LinearLayout>
</ScrollView>