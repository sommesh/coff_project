<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:fadingEdge="none"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/bac"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.som.coffee.justjava">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Cappuccino"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />


    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginBottom="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/capuccino" />

    <Button
        android:id="@+id/cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:onClick="cap"
        android:text="click here to know more " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espresso"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/espresso" />

    <Button
        android:id="@+id/esp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="esp"
        android:text="click here to know more "
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Americano"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/americano" />

    <Button
        android:id="@+id/ame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:onClick="a"
        android:text="click here to know more " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caffe Latte"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/caffe" />

    <Button
        android:id="@+id/caf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:text="click here to know more " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cafe au Lait"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/cafe" />

    <Button
        android:id="@+id/cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:text="click here to know more " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caf Mocha"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/mocha" />

    <Button
        android:id="@+id/moc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:text="click here to know more " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caramel Macchiato"
        android:textAllCaps="true"
        android:textColor="#d81515"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/caramel" />

    <Button
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textStyle="italic"
        android:text="click here to know more " />
</LinearLayout>
</ScrollView>